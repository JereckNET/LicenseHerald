<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Olivier PIRLET</Authors>
    <Company>Jereck.NET Consulting</Company>
    <PackageId>JereckNET.LicenseHerald</PackageId>
    <Product>License Herald</Product>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>LicenseHerald.snk</AssemblyOriginatorKeyFile>
    <Copyright>Copyright Â© Jereck.NET Consulting 2019</Copyright>
    <PackageProjectUrl>https://github.com/JereckNET/LicenseHerald</PackageProjectUrl>
    <PackageTags>Licences;</PackageTags>
    <PackageLicenseUrl>https://github.com/JereckNET/LicenseHerald/blob/master/LICENSE.md</PackageLicenseUrl>
    <PackageLicenseType>MIT</PackageLicenseType>
    <RepositoryUrl>https://github.com/JereckNET/LicenseHerald.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <Description>Quickly advertise the licenses of the components used in your project.</Description>
    <PackageIconUrl>https://raw.githubusercontent.com/JereckNET/LicenseHerald/master/images/Herald.png</PackageIconUrl>
    <Version>1.0.1</Version>
    <NeutralLanguage>en-US</NeutralLanguage>
    <PackageReleaseNotes>Added project Icon</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <Compile Update="Properties\License.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>License.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\License.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
      <LastGenOutput>License.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>
